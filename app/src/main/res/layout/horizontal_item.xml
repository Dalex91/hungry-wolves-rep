<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="meal"
            type="com.example.hungrywolves.network.Meal" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clipChildren="true"
        android:insetBottom="0dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/card_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{meal.mealUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CustomShapeImage"
            tools:srcCompat="@tools:sample/avatars">

        </com.google.android.material.imageview.ShapeableImageView>

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/card_image"
            android:id="@+id/card_parent"
            android:layout_width="@dimen/card_width_180dp"
            android:layout_height="@dimen/card_height_220dp"
            android:backgroundTint="@color/white"
            android:translationZ="-1dp"
            android:layout_marginTop="@dimen/margin_40dp"
            app:cardCornerRadius="@dimen/radius_32dp"
            app:cardElevation="@dimen/elevation_10dp"
            android:layout_marginBottom="@dimen/margin_40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_name"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="120dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:paddingHorizontal="@dimen/margin_16dp"
                    android:text="@{meal.name}"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:textSize="@dimen/text_size_18sp"
                    tools:text="Hehe boay" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>