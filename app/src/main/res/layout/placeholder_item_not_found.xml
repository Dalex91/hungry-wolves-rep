<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:iconTint="@color/gray"
            android:minWidth="@dimen/size_140dp"
            android:minHeight="@dimen/size_140dp"
            android:src="@drawable/ic_search_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/not_found_text"/>

        <TextView
            android:id="@+id/not_found_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="@string/item_not_found"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:lines="2"
            android:padding="@dimen/margin_16dp"
            android:text="@string/try_searching_the_item_with_na_different_keyword"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintEnd_toEndOf="@id/not_found_text"
            app:layout_constraintStart_toStartOf="@id/not_found_text"
            app:layout_constraintTop_toBottomOf="@id/not_found_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>