<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="meal"
            type="com.example.hungrywolves.network.data_model.Meal" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clipChildren="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_parent"
            android:layout_width="@dimen/card_width_180dp"
            android:layout_height="@dimen/card_height_220dp"

            android:backgroundTint="@color/white"
            android:translationZ="-1dp"
            app:cardCornerRadius="@dimen/radius_38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/card_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="@dimen/elevation_10dp"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{meal.mealUrl}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7"
                    app:shapeAppearanceOverlay="@style/CustomShapeImage"
                    tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_144dp"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/margin_16dp"
                    android:text="@{meal.name}"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Hehe boay" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>